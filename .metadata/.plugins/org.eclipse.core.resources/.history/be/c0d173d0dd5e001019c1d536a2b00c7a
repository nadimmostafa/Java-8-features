package org.nadim.collectionenhancement;

import java.util.ArrayList;
import java.util.List;

public class CollectionEnhancements {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		ArrayList<Integer> al = new ArrayList<>();
		al.add(10);
		al.add(20);
		al.add(125);
		al.add(6);
		al.add(05);
		
//		for(int i=0; i<al.size();i++) {
//			System.out.println(al.get(i));
//		}
		
		//al.forEach((a)-> System.out.println(a));
		al.forEach(System.out::println);
		
		
		List<Employee> list = new ArrayList<>();
		list.add(new Employee("Nadim","CEO",250000,"Chapai"));
		list.add(new Employee("Asif","CTO",150000,"Rajshai"));
		list.add(new Employee("Kafi","COO",80000,"Nator"));
		list.add(new Employee("Atik","Manager",70000,"Dhaka"));
		list.add(new Employee("Shuvo","Sr.Developer",65000,"Chapai"));
		list.add(new Employee("Mostafa","Developer",50000,"Dhaka"));
		
		list.forEach((l)->{
			double salary = l.getSalary();
			if(salary>80000) {
				System.out.println("Name of the Emp is: "+l.getName()+ " and his Designation is: "+l.getDesignation());
			}
		});
		
	}

}
